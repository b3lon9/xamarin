<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.ThirdPage">
    <NavigationPage.TitleView>
        <Label
            Text="Third Page"
            TextColor="#fff"
            FontAttributes="Bold"
            HorizontalTextAlignment="End"
            Margin="0, 0, 20, 0"/>
    </NavigationPage.TitleView>
    
    <ContentPage.Content>
        <StackLayout>
            <Label 
                Text="Third Page"
                HorizontalTextAlignment="Center"
                FontSize="30"
                Padding="20"
                TextColor="#fff"
                BackgroundColor="#f00"
                FontAttributes="Bold" />

            <Button
                x:Name="btn01"
                Text="go to second Page"
                VerticalOptions="EndAndExpand"
                Margin="20"
                Clicked="btn01_Clicked"/>

            <Button
                x:Name="btn02"
                Text="go to Root Page"
                VerticalOptions="EndAndExpand"
                Margin="20"
                Clicked="btn01_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>